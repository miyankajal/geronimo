<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<% if current_user.nil? %>
				<a class="navbar-brand" href="../demo"><i class="glyphicon glyphicon-tower"></i> GERONIMO!!!</a>
			<% else %>
				<a class="navbar-brand" href="../geronimo_settings"><i class="glyphicon glyphicon-tower"></i> GERONIMO!!!</a>
			<% end %>
			<nav>
				<ul class="nav navbar-nav navbar-right">
					<% if sign_in? %>
						
						<li>
							<%= link_to user_path(current_user) do %> 
								Home <i class="glyphicon glyphicon-home"></i> 
							<% end %>
						</li>
							
						<% if current_user.type == 1 %>
							<li class="dropdown">
        						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Users <i class="glyphicon glyphicon-user"></i> <b class="caret"></b></a>
        						<ul class="dropdown-menu">
        							<li><%= link_to "Administrators", users_path(type: 1, desc: 'Administrators', class_id: 0) %></li>
									<li><%= link_to "Teachers", users_path(type: 2, desc: 'Teachers', class_id: 0) %></li>
									<li><%= link_to "Guardians", users_path(type: 4, desc: 'Guardians', class_id: 0) %></li>
          							<li class="divider"></li>
          							<li><%= link_to "Classes", class_sections_path %></li>
        						</ul>
      						</li>
						<% end %>
						
						<% if current_user.type != 1 %>
							<li>
								<%= link_to points_path do %> 
									Points <i class="glyphicon glyphicon-edit"></i> 
								<% end %>
							</li>
							
						<% end %>

						<% if current_user.type == 1 %>
							<li>
								<%= link_to reports_path do %> 
									Reports <i class="glyphicon glyphicon-dashboard"></i> 
								<% end %>	
							</li>
							<li class="dropdown">
        						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <i class="glyphicon glyphicon-cog"></i> <b class="caret"></b></a>
        						<ul class="dropdown-menu">
									<li><%= link_to "Alert Settings", edit_alert_setting_path(1) %></li>
									<li><%= link_to "Point System", points_path %></li>
									<li><%= link_to "Terms", terms_path %></li>
								<ul>
							</li>
						<% elsif current_user.type == 2 %>
							<li>
								<%= link_to class_sections_path do %> 
									Classes <i class="glyphicon glyphicon-user"></i> 
								<% end %>
							</li>
						<% end %>
					<% else %>
						<li>
							<%= link_to root_path do %> 
								Sign in <i class="glyphicon glyphicon-off"></i> 
							<% end %>
						</li>
					<% end %>

 					<% if sign_in? %>
 						
						<% if current_user.type == 2 %>
							<li>
								<%= link_to get_portal_ideas_path(2,0,0,0) do %> 
									IDEAS BANK <i class="glyphicon glyphicon-move"></i> 
								<% end %>
							</li>
						<% elsif current_user.type == 3 %>
							<li>
								<%= link_to get_portal_ideas_path(1,0,0,0) do %> 
									IDEAS BANK <i class="glyphicon glyphicon-move"></i> 
								<% end %>
							</li>
						<% end %>
				
 						<li>
 							<%= link_to signout_path, :method => 'delete' do %> 
								Sign out <i class="glyphicon glyphicon-off"></i> 
							<% end %>
 						</li>
 					<% end %>
 					
				</ul>
			</nav>
		</div>
	</div>	
</header>