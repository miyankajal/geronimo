<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="navbar-inner">
		<div class="container">
			<% if current_user.nil? %>
				<a class="navbar-brand" href="../demo">GERONIMO!!!</a>
			<% else %>
				<a class="navbar-brand" href="../geronimo_settings">GERONIMO!!!</a>
			<% end %>
			<nav>
				<ul class="nav navbar-nav navbar-right">
					<% if sign_in? %>
						
						<li><%= link_to "Home", user_path(current_user) %></li>
							
						<% if current_user.type == 1 %>
							<li class="dropdown">
        						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Users <b class="caret"></b></a>
        						<ul class="dropdown-menu">
        							<li><%= link_to "Administrators", users_path(type: 1, desc: 'Administrators', class_id: 0) %></li>
									<li><%= link_to "Teachers", users_path(type: 2, desc: 'Teachers', class_id: 0) %></li>
									<li><%= link_to "Guardians", users_path(type: 4, desc: 'Guardians', class_id: 0) %></li>
          							<li class="divider"></li>
          							<li><%= link_to "Classes", class_sections_path %></li>
        						</ul>
      						</li>
						<% end %>
						
						<% if current_user.type != 1 %>
							<li><%= link_to "Points", points_path %></li>
						<% end %>

						<% if current_user.type == 1 %>
							<li><%= link_to "Reports", reports_path %></li>
							<li class="dropdown">
        						<a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
        						<ul class="dropdown-menu">
									<li><%= link_to "Alert Settings", edit_alert_setting_path(1) %></li>
									<li><%= link_to "Point System", points_path %></li>
									<li><%= link_to "Terms", terms_path %></li>
								<ul>
							</li>
						<% elsif current_user.type == 2 %>
							<li><%= link_to "Classes", class_sections_path %></li>
						<% end %>
					<% else %>
						<li><%= link_to "Sign in", root_path %></li>
					<% end %>

 					<% if sign_in? %>
 						<li><%= link_to "Sign out", signout_path, :method => 'delete' %></li>
 					<% end %>
				</ul>
			</nav>
		</div>
	</div>	
</header>