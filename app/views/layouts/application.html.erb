	<title>Geronimo!!!</title>
	
	<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %> 
	<!--important for best in place-->
	<%= stylesheet_link_tag "jquery-ui-1.8.20.custom", "best_inplace", "bootstrap" %>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.js"></script>
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.js"></script>
	<%= javascript_include_tag "application", "jquery.dataTables.min", "data-turbolinks-track" => true  %>
	<%= csrf_meta_tags %>
</head>

<body>
	<% flash.each do |key, msg| %>
		<div class="span7" style="width:100%;">
			<div class="alert alert-dismissable alert-info">
			  <button type="button" class="close" data-dismiss="alert">Ã—</button>
			  <p><%= msg %></p>
			</div>
		</div>
	<% end %>
    
	<% if session[:product] == 2 %>
		<%= render 'layouts/ideas_header'%>
	<% else %>
		<%= render 'layouts/header'%>
  	<% end %>
  	
	<div class = "container">
		<%= yield %>
	</div>
	
	<%= render 'layouts/footer'%>
</body>
</html>
