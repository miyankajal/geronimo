<h1>Teacher Class</h1>

<div class="row">
<div class="span6 offset3">

<%= form_for(@teacher_class_relationship) do |f| %>
  <% if @teacher_class_relationship.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher_class_relationship.errors.count, "error") %> prohibited the realtion from being saved:</h2>

      <ul>
      <% @teacher_class_relationship.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
 	   <%= f.label :class_section_id %><br>
 	   <%= f.select :class_section_id, @teacher_classes %>
  </div>
  <div class="field">
    <%= f.label :teacher_role_id %><br>
    <%= f.select :teacher_role_id, @teacher_roles %>
  </div>
  
  <%= f.hidden_field :user_id, :value => params[:user_id] %> 
  <!--%= f.hidden_field :is_credit, :value => @point_options.credit %-->
  
  <div class="actions">
    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

</div>
</div>