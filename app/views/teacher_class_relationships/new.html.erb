<h1>Teacher Class</h1>

<div class="row-fuild">
	<div class="span4 well">

		<%= form_for(@teacher_class_relationship) do |f| %>
			<% if @teacher_class_relationship.errors.any? %>
				<div id="error_explanation">
				  <h2><%= pluralize(@teacher_class_relationship.errors.count, "error") %> prohibited the realtion from being saved:</h2>

				  <ul>
				  <% @teacher_class_relationship.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				  <% end %>
				  </ul>
				</div>
			<% end %>

			  <div class="form-group">
				   <%= f.label :class_section_id, :class=>'col-lg-2 control-label' %><br>
				   <div class="col-lg-10">
						<%= f.select :class_section_id, @teacher_classes, :class=>'form-control' %>
				   </div>
			  </div>
			  <div class="form-group">
				<%= f.label :teacher_role_id, :class=>'col-lg-2 control-label' %><br>
				<div class="col-lg-10">
					<%= f.select :teacher_role_id, @teacher_roles, :class=>'form-control' %>
				</div>
			  </div>
  
			  <%= f.hidden_field :user_id, :value => params[:user_id] %> 
			  <!--%= f.hidden_field :is_credit, :value => @point_options.credit %-->
  
			  <div class="form-actions">
				<%= f.submit "Save changes", class: "btn btn-primary" %>
			  </div>
		<% end %>

	</div>
</div>