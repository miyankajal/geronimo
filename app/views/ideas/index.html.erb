<div style="width:100%;">
	<%= render 'bulletin_board' %>
	<% if current_user.type == 2 && params[:portal_id] == '0' %>
		<h3><%= link_to 'Ideas to be Accepted', get_portal_ideas_path(0,0,0,0) %></h3>
	<% end %>

	<% set_product_ideas %>
	</br>
	<% if params[:portal_id] == '1' && params[:tag_id] == '0' %>
		<%= render 'form' %>
	<% end %>

	<% if current_user.type == 2 && params[:portal_id] == '2' %>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>My classes</th>
					<th>Action</th>
					<th>Action</th>
				</tr>
			</thead>
		
			<tbody>
				<% @teacher_class_options.each do |teacher_class| %>
					<tr>
						<td><%= teacher_class[0] %></td>
						<td><%= link_to 'Not Yet Accepted', get_portal_ideas_path(2,teacher_class[1],0,0) %></td>
						<td><%= link_to 'Accepted', get_portal_ideas_path(2,teacher_class[1],1,0) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		<br/><br/>
	<% end %>

	<% if @ideas.empty? %>
		<div class="alert alert-dismissable alert-danger" style="width:75%;"> NO IDEAS TO DISPLAY!!! </div>
	<% else %>
		<% @ideas.each do |idea| %>
			<%= render idea %>
		<% end %>
	<% end %>
</div>
