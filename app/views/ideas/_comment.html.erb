<div class="span7">
    <div class="row">
        <div class="well" style="width:100%;">
		<% if @comment.nil? %>
			<% @comment = Comment.new %>
		<% end %>
        	<%= form_for @comment, :html => {:class => 'form-horizontal'} do |f| %>
				<fieldset>
					  <% if @comment.errors.any? %>
						<div id="error_explanation">
						  <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this idea from being saved:</h2>

						  <ul>
						  <% @comment.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						  <% end %>
						  </ul>
						</div>
					  <% end %>

					  <div class="form-group">
						<%= f.label :comment, :class=>'col-sm-2 control-label' %><br>
						<div class="col-xs-4">
							<%= f.text_area :comment, :cols => "60", :rows => "2" %>
						</div>
					  </div>

					  <%= f.hidden_field :user_id, :value => current_user.id %> 
					  <%= f.hidden_field :idea_id, :value => idea_id %>
					
					    <p>
						  <div class="form-actions">
							<div class="col-sm-offset-2 col-sm-10">
								<%= f.submit "Create Comment", class: "btn-small btn-primary" %>
							</div>
						  </div>
					   </p>
		  
				</fieldset>
			<% end %>
		</div>
    </div>
</div>