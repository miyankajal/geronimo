<h1>Listing points</h1>

<% if current_user.type == 1 || current_user.type == 2 %>
	</br>
	<%= render 'form' %>
	<hr>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Value</th>
      <th>Carded Offenses</th>
    </tr>
  </thead>

  <tbody>
    <% @points.each do |point| %>
      <tr>
        <td><%= point.description %></td>
	<% if point.credit %>
        	<td><%= point.value %></td>
	<% else %>
		<td><%= point.value * -1 %></td>
	<% end %>
	<% @desc = CardOffenseType.select('description').where('id = ?', point.card_offense_id).first %>
	<td><%= @desc.description %></td>

	<% if current_user.type == 1 %>
        	<td>
        		<%= link_to edit_point_path(point), :rel=>"tooltip", "data-placement"=>"right", "data-original-title"=>"Edit" do %> 
					<i class="glyphicon glyphicon-pencil"></i> 
				<% end %>
        	</td>
       		<td>
       			<%= link_to point, method: :delete, data: { confirm: 'Are you sure you want to remove this point?' } , :rel=>"tooltip", "data-placement"=>"right", "data-original-title"=>"Remove" do %> 
					<i class="glyphicon glyphicon-trash"></i> 
				<% end %>
       		</td>
	<% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
