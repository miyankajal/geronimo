<tr id="tag_<%= tag.id %>">
    <td><%= best_in_place tag, :description, :type => :input %></td>
	<td><%= best_in_place tag, :points, :as => :input, :activator => "#edit_#{tag.id}" %></td>

    <td>
		<%= link_to "#", :id=>"edit_#{tag.id}",  :rel=>"tooltip", "data-placement"=>"right", "data-original-title"=>"Edit Tag" do %> 
			<i class="glyphicon glyphicon-pencil"></i> 
		<% end %>
	</td>
    <td>
    	<%= link_to tag, method: :delete, data: { confirm: 'Are you sure you want to remove this tag?' } , :rel=>"tooltip", "data-placement"=>"right", "data-original-title"=>"Remove", remote: true do %> 
			<i class="glyphicon glyphicon-trash"></i> 
		<% end %>	
    </td>
</tr>