<h1>Listing tags</h1>

</br>
<% if current_user.type == 2 %>
	<%= render 'form' %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= best_in_place tag, :description, :type => :input, :activator => "#edit_#{tag.id}" %></td>
        <td><a href="#" id="edit_<%= tag.id %>">Edit</a></td>
        <td><%= link_to 'Remove', tag, method: :delete, data: { confirm: 'Are you sure you want to remove the tag?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %>
