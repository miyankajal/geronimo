<h1>Listing tags</h1>

</br>
<% if current_user.type == 2 %>
	<div class="span7" style="width:100%;">
		<div class="row">
			<div class="well">
				<div class="alert alert-dismissable alert-success">
					Students will only be allowed to add tags that have 0 points associated with them. The tags with higher points can only be assigned by the teachers.
				</div>
			</div>
		</div>
	</div>

	<%= render 'form' %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Point</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= best_in_place tag, :description, :type => :input %></td>
		<td><%= best_in_place tag, :points, :type => :input, :activator => "#edit_#{tag.id}" %></td>

        <td><a href="#" id="edit_<%= tag.id %>">Edit Point</a></td>
        <td>
        	<%= link_to tag, method: :delete, data: { confirm: 'Are you sure you want to remove this tag?' } , :rel=>"tooltip", "data-placement"=>"right", "data-original-title"=>"Remove" do %> 
				<i class="glyphicon glyphicon-trash"></i> 
			<% end %>	
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

