<h1>Listing user_types</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @user_types.each do |user_type| %>
      <tr>
        <td><%= user_type.description %></td>
        <td><%= link_to 'Show', user_type %></td>
        <td><%= link_to 'Edit', edit_user_type_path(user_type) %></td>
        <td><%= link_to 'Remove', user_type, method: :delete, data: { confirm: 'Are you sure you want to remove the user type?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

