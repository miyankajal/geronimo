<div class="row">
<div class="span6 offset3">
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="field">
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <% if @user.type.nil? %>
 	 <%= f.hidden_field :type, :value => params[:type] %> 
  <% end %>
 
 <% if params[:type] == "3" %>
	  <div class="field">
 	   <%= f.label :enrollment_id %><br>
 	   <%= f.number_field :enrollment_id %>
 	 </div>
 	 <div class="field">
 	   <%= f.label :class_section %><br>
 	   <%= f.select :class_id, @class_options %>
 	 </div>
  <% end %>

  
  <div class="actions">
    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

</div>
</div>