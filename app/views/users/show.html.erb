<div class="user_avatars">
	<%= gravatar_for current_user %>
	<h3><%= current_user.username %><h3>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<% if @user.type == 3%>
<p>
  <strong>Enrollment:</strong>
  <%= @user.enrollment_id %>
</p>

<p>
  <strong>Class:</strong>
  <%= @user.class_id %>
</p>

<%end%>

<% if current_user.type == 1 %>
	<%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
