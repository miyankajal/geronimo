<h1>Sign in</h1>
<div class="span7" style="width:100%;">
    <div class="row">
        <div class="well">

		<%= form_for(:session, url: sessions_path, :html => {:class => 'form-horizontal'}) do |f| %>
		<fieldset>
			
			<div class="form-group">
				<%= f.label :login %>
				<div>
					<%= f.text_field :email, :placeholder => 'Username/Email' %>
				</div>
			</div>
			
			<div class="form-group">
				<%= f.label :password %>
				<div>
					<%= f.password_field :password, :placeholder => 'Password' %>
				</div>
			</div>

			<div class="form-actions">
				<div>
					<%= f.submit "Sign in", class: "btn btn-primary" %>
				</div>	
			</div>
						
			<div>
				<%= f.label :remember_me %>
				<%= f.check_box :remember_me %>
		    </div>

			<div>
				<p><%= link_to "Forgot password?", new_password_reset_path %></p>
			</div>	

		<fieldset>
		<% end %>
	  </div>
    </div>
</div>