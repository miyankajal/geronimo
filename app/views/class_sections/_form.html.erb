<div class="span7" style="width:100%;">
    <div class="row">
        <div class="well">
			<div class="alert alert-dismissable alert-success">
				Only Class Teachers can add points or remove students. Restricted Teachers can only see points and edit student information.
			</div>
			<% if @class_section.nil? %>
				<% @class_section = ClassSection.new %>
			<% end %>
			<%= form_for @class_section, :html => {:class => 'form-horizontal'} do |f| %>
				 <fieldset>
				  <% if @class_section.errors.any? %>
					<div class="alert alert-dismissable alert-danger">
					  <h4><%= pluralize(@class_section.errors.count, "error") %> prohibited this class_section from being saved:</h4>
						<button type="button" class="close" data-dismiss="alert">x</button>
					  <ul>
					  <% @class_section.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					  <% end %>
					  </ul>
					</div>
				  <% end %>

				  <div class="form-group">
					<%= f.label :description, :class=>'col-sm-2 control-label' %>
					<div class="col-xs-4">
						<%= f.text_field :description, :class=>'form-control' %>
					</div>
				  </div>
			  
				  <%= f.hidden_field :school_id, :value => current_user.school_id %> 
			  
				  <p>
				  <div class="form-actions">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit "Create Class", class: "btn-small btn-primary" %>
					</div>
			
				  </div>
				  </p>
			  
				<fieldset>
			<% end %>
		</div>
	</div>
</div>