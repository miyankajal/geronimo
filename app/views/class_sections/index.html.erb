<h1>Listing Classes</h1>

<div class="span7">
	<div class="row">
		<div class="well" style="width:100%;">
			<div class="alert alert-dismissable alert-success">
				Only Class Teachers can add points or remove students. Restricted Teachers can only see points and edit student information.
			</div>
		</div>
	</div>
</div>
</br>
<%= link_to new_class_section_path, :rel=>"tooltip", "data-placement"=>"right", "data-original-title"=>"New Class" do %>
	New Class <i class="glyphicon glyphicon-plus"></i> 
<% end %>
<hr>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Classes</th>
      <% if current_user.type == 2 %>
     	 <th>Role</th>
      <% else %>
      	  <th>Action</th>
      <% end %>
      
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @class_sections.each do |class_section| %>
      <tr>
        <td><%= link_to class_section.description, users_path(type: 3, desc: 'Students', class_id: class_section.id) %></td>
        <% if current_user.type == 2 %>
        <td><% @teacher_role_id = teacher_classes_and_roles(current_user.id, class_section.id) %>
        	<% if @teacher_role_id == 2 %>
        		<%= 'Class Teacher' %>
        	<% elsif @teacher_role_id == 3 %>	
        		<%= 'Subject Teacher' %>
        	<% else %>
        		<%= 'Restricted Teacher' %>
        	<% end %>
        </td>
        <% end %>
        <% if current_user.type == 1 %>
       		<td><%= link_to 'Edit', edit_class_section_path(class_section) %></td>
        	<td><%= link_to 'Remove', class_section, method: :delete, data: { confirm: 'Are you sure you want to remove the class?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
