<h1>New point</h1>

<div class="row">
<div class="span6 offset3">

<%= form_for(@student_point) do |f| %>
  <% if @student_point.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student_point.errors.count, "error") %> prohibited this point from being saved:</h2>

      <ul>
      <% @student_point.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
 	   <%= f.label :point_id %><br>
 	   <%= f.select :point_id, @point_options, {:include_blank =>'select one'}, :onchange => 'get_point(this.value)', :id => "point"%>
  </div>

  <div class="field">
    <%= f.label :assigned_points %><br>
    <%= f.number_field(:assigned_points, :id => "assigned_points_value")%>
  </div>
  
  <%= f.hidden_field :user_id, :value => params[:user_id] %> 
  <!--%= f.hidden_field :is_credit, :value => @point_options.credit %-->
  
  <div class="actions">
    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

</div>
</div>