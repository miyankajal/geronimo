<div class="span7" style="width:100%;">
    <div class="row">
        <div class="well">

		<% if @term.nil? %>
			<% @term = Term.new %>
		<% end %>
		<h3>New term</h3>

		<%= form_for @term, :html => {:class => 'form-horizontal'}, :id => 'terms_form', :remote => true  do |f| %>
		 <fieldset>
		  <% if @term.errors.any? %>
			<div id="error_explanation">
			  <h2><%= pluralize(@term.errors.count, "error") %> prohibited this term from being saved:</h2>

			  <ul>
			  <% @term.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			  <% end %>
			  </ul>
			</div>
		  <% end %>

		 <div class="form-group">
			<%= f.label :name, :class=>'col-sm-2 control-label' %>
			<div class="col-xs-4">
				<%= f.text_field :name, :class=>'form-control' %>
			</div>
		  </div>
		  <div class="form-group">
			<%= f.label :term_from, :class=>'col-sm-2 control-label' %>
			<div class="col-xs-4">
				<%= f.date_select :term_from, :class=>'form-control' %>
			</div>
		  </div>
		  <div class="form-group">
			<%= f.label :term_to, :class=>'col-sm-2 control-label' %>
			<div class="col-xs-4">
				<%= f.date_select :term_to, :class=>'form-control' %>
			</div>
		  </div>
		  <%= f.hidden_field :school_id, :value => current_user.school_id %> 
		  
		  <p>
			  <div class="form-actions">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Create Term", class: "btn-small btn-primary" %>
				</div>
			  </div>
			  </p>
  
		  </fieldset>
		<% end %>

	</div>
    </div>
</div>
